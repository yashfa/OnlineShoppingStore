@using store.Models
@{
    ViewBag.Title = "users";
    Layout = "~/Views/Shared/_Admin_Header.cshtml";
    User ps = new User();
    if (Model.Count != 0)
    {
        ps = Model[0];
    }
}

@{  User user = (User)HttpContext.Current.Session["user"]; }


<body>
    <div class="ch-container">
        <div class="row">

            <div id="content" class="col-lg-10 col-sm-10">
                <!-- content starts -->
                <div>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/Admin/Dashboard">Home</a>
                        </li>
                        <li>
                            <a href="/Admin/Users">Users</a>
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <div class="box col-md-12">
                        <div class="box-inner">
                            <div class="box-header well" data-original-title="">

                                @if (Model.Count != 0)
                                {
                                    if (ps.type.Equals("Admin") || ps.type.Equals("MasterAdmin"))
                                    {
                                        <h2><i class="glyphicon glyphicon-user"></i>Admin</h2>
                                    }
                                    else
                                    {
                                        <h2><i class="glyphicon glyphicon-user"></i>Users</h2>
                                    }
                                }

                            </div>

                            @if (Model.Count != 0)
                            {
                                if (!ps.type.Equals("Admin"))
                                {
                                    <div class="box-content">
                                        <form method="post" action="/Admin/Searchuser">
                                            <div class="form-group">
                                                <label>Search</label>
                                                <input type="text" name="search" class="form-control" placeholder="Title" required>
                                            </div>

                                            <button type="submit" class="btn btn-default">Search</button>
                                        </form>
                                    </div>
                                }
                            }
                            <div class="box-content">
                                <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>password</th>
                                            @if (Model.Count != 0)
                                            {
                                                if (user.type.Equals("MasterAdmin") || ps.type.Equals("user"))
                                                {
                                                    <th>Action</th>
                                                }
                                            }

                                        </tr>
                                    </thead>
                                    <tbody>

                                        @if (Model.Count != 0)
                                        {

                                            foreach (User u in Model)
                                            {
                                                <tr>
                                                    <td>@u.username</td>
                                                    <td>@u.email</td>
                                                    <td>@u.password</td>

                                                    @if (user.type.Equals("MasterAdmin") || u.type.Equals("user"))
                                                    {
                                                        <td class="center">

                                                            <i class="glyphicon glyphicon-edit icon-white btn btn-info">
                                                                @Html.ActionLink("Edit", "EditUser", new { id = u.Id })
                                                            </i>
                                                            <i class="glyphicon glyphicon-trash icon-white btn btn-danger" style="text-decoration-color: white">
                                                                @Html.ActionLink("Delete", "Deleteuser", new { id = u.Id })
                                                            </i>

                                                        </td>
                                                    }
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div><!--/row-->
                <!-- content ends -->
            </div><!--/#content.col-md-0-->
        </div><!--/fluid-row-->

    </div><!--/.fluid-container-->
</body>
