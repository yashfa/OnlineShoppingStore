@{
    ViewBag.Title = "viewOrders";
    Layout = "~/Views/Shared/_Admin_Header.cshtml";
    int i = 1;
}

@using store.Models

<body>
    <div class="ch-container">
        <div class="row">

            <div id="content" class="col-lg-10 col-sm-10">
                <!-- content starts -->
                <div>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/Admin/Dashboard">Home</a>
                        </li>
                        <li>
                            <a href="/Admin/ViewOrders">Order</a>
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <div class="box col-md-12">
                        <div class="box-inner">
                            <div class="box-header well" data-original-title="">
                                <h2><i class="glyphicon glyphicon-user"></i>Order</h2>

                            </div>
                            <div class="box-content">
                                <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th>customer name</th>
                                            <th>Date</th>
                                            <th>Total Amount</th>
                                            <th>Comment</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>



                                        @foreach (Order o in Model)
                                        {

                                            <tr>
                                                <td>@i</td>
                                                <td>@o.User.username</td>
                                                <td>@o.Date</td>
                                                <td>@o.total</td>
                                                <td>@o.comments</td>


                                                <td class="center">

                                                    <i class="glyphicon glyphicon-edit icon-white btn btn-info">
                                                        @Html.ActionLink("View Order Detail", "vieworderdetail", new { id = o.Id })
                                                    </i>

                                                </td>
                                            </tr>
                                            i++;
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div><!--/row-->
                <!-- content ends -->
            </div><!--/#content.col-md-0-->
        </div><!--/fluid-row-->

    </div><!--/.fluid-container-->
</body>
